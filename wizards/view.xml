<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="stock_valuation_wizard_view">
        <field name="name">stock.valuation.wizard.view</field>
        <field name="model">stock.valuation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <!--<group>-->
                    <!--<field name="company_id"/>-->
                    <!--<field name="warehouse_ids" widget="many2many_tags"/>-->
                    <!--<field name="location_id"/>-->
                <!--</group>-->
                <group>
                    <!--<field name="start_date"/>-->
                    <field name="end_date"/>
                    <field name="only_summary"/>
                </group>
                <group string="Select Categories">
                    <label
                        string="(If you do not select any categories it will take all categories)"
                        colspan="4" />
                    <field name="filter_product_categ_ids"
                        nolabel="1">
                        <tree string="Categories">
                            <field name="name" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string='Download PDF' name="donwload_pdf_report" type="object" class="oe_highlight"/>
                     o
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_valuation_wizard" model="ir.actions.act_window">
        <field name="name">export</field>
        <field name="res_model">stock.valuation.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
       <field name="view_id" ref="stock_valuation_wizard_view"/>
       <field name="target">new</field>
    </record>

    <menuitem id="stock_valuation_menuitem" name="Inventory Valuation (PDF)" action="action_stock_valuation_wizard"
              parent="stock.menu_warehouse_report" sequence="100" groups="stock.group_stock_manager"/>



</odoo>